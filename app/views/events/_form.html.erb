<div class="container">
<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">

    <%= form.label :event_id, class: "form-label" %>
    <%= form.text_field :event_id, {class: "form-control", placeholder: "Event ID"} %>

  </div>
  
  <div class="mb-3">

    <%= form.label :event_name, class: "form-label" %>
    <%= form.text_field :event_name, {class: "form-control", placeholder: "Event Name"} %>

  </div>

  <div class="mb-3">

    <%= form.label :event_type, class: "form-label" %>
    <%= form.text_field :event_type, {class: "form-control", placeholder: "Event Type"} %>
    
  </div>

  <div class="mb-3">

    <%= form.label :event_date, class: "form-label" %>
    <%= form.datetime_select :event_date, {class: "form-control", placeholder: "Event Date"} %>

  </div>

  <div class="mb-3">

    <%= form.label :description, class: "form-label" %>
    <%= form.text_field :description, {class: "form-control", placeholder: "Description"} %>

  </div>

  <div class="mb-3 form-check">

    <%= form.label :virtual, class: "form-check-label" %>
    <%= form.check_box :virtual, class: "form-check-input" %>

  </div>

  <div class="mb-3">

    <%= form.label :password, class: "form-label" %>
    <%= form.text_field :password, {class: "form-control", placeholder: "Password"} %>

  </div>

  <div class="mb-3">

    <%= form.label :meeting_link, class: "form-label" %>
    <%= form.text_field :meeting_link, {class: "form-control", placeholder: "Meeting Link"} %>

  </div>

  <div class="mb-3">

    <%= form.label :signin_time, class: "form-label" %>
    <%= form.datetime_select :signin_time, {class: "form-control", placeholder: "Sign In Time"} %>

  </div>

  <div class="mb-3">

    <%= form.label :point_val, class: "form-label" %>
    <%= form.number_field :point_val, {class: "form-control", placeholder: "Value"} %>

  </div>

  <div class="mb-3">

    <%= form.label :graphics, class: "form-label" %>
    <%= form.text_field :graphics, {class: "form-control", placeholder: "Graphics"} %>

  </div>

  <div class="mb-3">

    <%= form.label :total_event_hr, class: "form-label" %>
    <%= form.text_field :total_event_hr, {class: "form-control", placeholder: "Hours"} %>

  </div>

  <%= form.submit "Submit", class:"btn btn-secondary" %>
  
<% end %>
</div>